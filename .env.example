# MongoDB Connection String
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database Name
DB_NAME=travliaq_knowledge_base

# PostgreSQL/Supabase Configuration
PG_HOST=aws-1-eu-west-3.pooler.supabase.com
PG_DATABASE=postgres
PG_USER=postgres.************
PG_PASSWORD=**************
PG_PORT=5432
PG_SSLMODE=require

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Population Enrichment Script Configuration
# Supabase DB URL (combines all PG_* variables above)
SUPABASE_DB_URL=postgresql://postgres.************:**************@aws-1-eu-west-3.pooler.supabase.com:5432/postgres?sslmode=require

# GeoNames dataset to use (cities15000, cities5000, or cities1000)
GEONAMES_DATASET=cities15000

# Maximum distance in km for city matching
MAX_RADIUS_KM=30

# Wikidata API rate limit (queries per second)
WIKIDATA_MAX_QPS=2

# Database batch size for updates
BATCH_SIZE=2000

# Only update cities with NULL population (1) or all cities (0)
ONLY_NULL=1

# User agent for Wikidata requests
WIKIDATA_USER_AGENT=Travliaq/1.0
